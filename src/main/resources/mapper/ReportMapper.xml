<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.goalapa.cacamuca.reportDomain.query.domain.repository.">
    <resultMap id="reportResultMap" type="com.goalapa.cacamuca.memberDomain.query.domain.aggregate.entity.Member">
        <id property="reportNo" column="report_no" />
        <result property="reviewNo" column="review_no" />
        <result property="reportMemberNo" column="report_member_no" />
        <result property="reportedMemberNo" column="reported_member_no" />
        <result property="reportType" column="report_type" />
    </resultMap>

    <select id="selectList" resultType="Object">
        SELECT *
        FROM report
        <if test="pageable.sort.sorted">
            <foreach item="order" index="i" collection="pageable.sort" separator=", ">
                ${order.property} ${order.direction}
            </foreach>
        </if>
        limit ${pageable.size} offset ${pageable.page}*${pageable.page}
    </select>
</mapper>